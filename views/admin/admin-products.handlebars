<div class="container">
  <div class="products">
    <fieldset class="product-fields">
      <legend class="product-legends">
        <img src="/product-white.png">&ensp;<h3>P R O D U C T S</h3>
        <a href="/admin/product/create"><img src="/create.png" style="float:right; width:30px; height:30px; margin-top: 10px;"></a>
      </legend>
      <div class="container">
        <div class="table-responsive">
          <table class="table table-striped table-hover table-design">
            <thead>
              <tr>
                <th>Image</th>
                <th>Product Name</th>
                <th>Brand</th>
                <th>Category</th>
                <th>Price</th>
                <th>Description</th>
                <th>Action</th>
              </tr>
            </thead>
            {{#each products}}
            <tbody>
              <tr>
                <td><img src="{{this.image}}" style="float:left; height:50px; width:50px;"></td>
                <td>{{this.name}}</td>
                <td>{{this.brandname}}</td>
                <td>{{this.category}}</td>
                <td>{{this.price}}</td>
                <td>{{this.description}}</td>
                <td><a href="/admin/products/{{this.id}}"><img src="/action.png" style="height:25px; width:25px;"></td>
              </tr>
            </tbody>
            {{/each}}
          </table>
        </div>
      </div>
    </fieldset>
  </div>
</div>