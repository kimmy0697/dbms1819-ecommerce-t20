<div class="container">
  <div class="jumbotron mt-2">
    <div class="dashboard-title" align="center" style="margin-bottom: 40px">
      <img src="/footprints.png"><h2>DELISHOES DASHBOARD</h2><img src="/footprints.png">
    </div>
    <div class="row" style="margin-bottom: 40px">
      <div class="col-md-5" style="margin: 0 40px">
        <div class="dashboard-header">
          <h5 align="center">Top 10 Customers | Most Orders</h5>
        </div>
        <div class="row justify-content-center dashboard-table">
          <table class="table text-center">
            <thead>
              <tr class="dashboard-table1">
                <th>Customer Name</th>
                <th>Number of Orders</th>
              </tr>
            </thead>
            <tbody>
            {{#each topCustomersMostOrder}}
              <tr class="dashboard-table-tr">
                <td>{{this.first_name}}  {{this.last_name}}</td>
                <td>{{this.count}}</td>
              </tr>
            {{/each}}
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-5" style="margin: 0 40px">
        <div class="dashboard-header">
          <h5 align="center">Top 10 Customers | Highest Payment</h5>
        </div>
        <div class="row justify-content-center dashboard-table">
          <table class="table text-center">
            <thead>
              <tr class="dashboard-table1">
                <th>Customer</th>
                <th>Total Payment</th>
              </tr>
            </thead>
            <tbody>
            {{#each topCustomersHighestPayment}}
              <tr class="dashboard-table-tr">
                <td>{{this.first_name}}  {{this.last_name}}</td>
                <td>Php {{number this.sum}}.00</td>
              </tr>
            {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="row" style="margin-bottom: 40px">
      <div class="col-md-5" style="margin: 0 40px">
        <div class="dashboard-header">
          <h5 align="center">Top 10 Products | Most Ordered</h5>
        </div>
        <div class="row justify-content-center dashboard-table">
          <table class="table text-center">
            <thead>
              <tr class="dashboard-table1">
                <th>Product Model Name</th>
                <th>Number of Orders</th>
              </tr>
            </thead>
            <tbody>
            {{#each mostOrderedProduct}}
              <tr class="dashboard-table-tr">
                <td>{{this.products_name}}</td>
                <td>{{this.total}}</td>
              </tr>
            {{/each}}
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-5" style="margin: 0 40px">
        <div class="dashboard-header">
          <h5 align="center">Top 10 Products | Least Ordered</h5>
        </div>
        <div class="row justify-content-center dashboard-table">
          <table class="table text-center">
            <thead>
              <tr class="dashboard-table1">
                <th>Product Model Name</th>
                <th>Number of Orders</th>
              </tr>
            </thead>
            <tbody>
            {{#each leastOrderedProduct}}
              <tr class="dashboard-table-tr">
                <td>{{this.products_name}}</td>
                <td>{{this.total}}</td>
              </tr>
            {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="row" style="margin-bottom: 40px">
      <div class="col-md-5" style="margin: 0 40px">
        <div class="dashboard-header">
          <h5 align="center">Top 3 Most Ordered Brands</h5>
        </div>
        <div class="row justify-content-center dashboard-table">
          <table class="table text-center">
            <thead>
              <tr class="dashboard-table1">
                <th>Brand Name</th>
                <th>Number of Orders</th>
              </tr>
            </thead>
            <tbody>
            {{#each mostOrderedBrand}}
              <tr class="dashboard-table-tr">
                <td>{{this.brand_name}}</td>
                <td>{{this.total}}</td>
              </tr>
            {{/each}}
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-5" style="margin: 0 40px">
        <div class="dashboard-header">
          <h5 align="center">Top 3 Most Ordered Categories</h5>
        </div>
        <div class="row justify-content-center dashboard-table">
          <table class="table text-center">
            <thead>
              <tr class="dashboard-table1">
                <th>Category Name</th>
                <th>Number of Orders</th>
              </tr>
            </thead>
            <tbody>
            {{#each mostOrderedCategory}}
              <tr class="dashboard-table-tr">
                <td>{{this.category_name}}</td>
                <td>{{this.total}}</td>
              </tr>
            {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="row" style="margin-bottom: 40px">
      <div class="col-md-5" style="margin: 0 40px">
        <div class="dashboard-header">
          <h5 align="center">Total Sales</h5>
        </div>
        <div class="row justify-content-center dashboard-table">
          <table class="table text-center">
            <thead>
              <tr class="dashboard-table1">
                <th>For the last 7 Days</th>
                <th>For the last 30 Days</th>
              </tr>
            </thead>
            <tbody>
              <tr class="dashboard-table-tr">
                <td>Php {{number totalSalesLast7days}}.00</td>
                <td>Php {{number totalSalesLast30days}}.00</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-5" style="margin: 0 40px">
        <div class="dashboard-header">
          <h5 align="center">Daily Order Counts</h5>
        </div>
        <div class="row justify-content-center dashboard-table">
          <table class="table text-center">
            <thead>
              <tr class="dashboard-table1">
                <th>Order Counts in the Last 8 Days</th>
              </tr>
            </thead>
            <tbody>
              <tr class="dashboard-table-tr">
                <td>This day: {{thisDay}} order/s acquired.</td>
              </tr>
              <tr>
                <td>1 day ago: {{oneDayAgo}} order/s acquired.</td>
              </tr>
              <tr>
                <td>2 days ago: {{twoDaysAgo}} order/s acquired.</td>
              </tr>
              <tr>
                <td>3 days ago: {{threeDaysAgo}} order/s acquired.</td>
              </tr>
              <tr>
                <td>4 days ago: {{fourDaysAgo}} order/s acquired.</td>
              </tr>
              <tr>
                <td>5 days ago: {{fiveDaysAgo}} order/s acquired.</td>
              </tr>
              <tr>
                <td>6 days ago: {{sixDaysAgo}} order/s acquired.</td>
              </tr>
              <tr>
                <td>7 days ago: {{sevenDaysAgo}} order/s acquired.</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
