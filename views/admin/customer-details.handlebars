<div class="col-md-9">
	<div class="row">
		<div class="col-md-12">
			<p>CUSTOMER DETAILS:</p>
			<div class="table-responsive">
				<table class="table table-striped table-hover table-design">
					<thead>
						<tr>
							<th>First Name</th>
							<th>Middle Name</th>
							<th>Last Name</th>
							<th>Email Address</th>
							<th>State</th>
							<th>City</th>
							<th>Street</th>
							<th>Zipcode</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>{{rows.0.first_name}}</td>
							<td>{{rows.0.middle_name}}</td>
							<td>{{rows.0.last_name}}</td>
							<td>{{rows.0.email}}</td>
							<td>{{rows.0.state}}</td>
							<td>{{rows.0.city}}</td>
							<td>{{rows.0.street}}</td>
							<td>{{rows.0.zipcode}}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<p>ORDER DETAILS:</p>
			<div class="table-responsive">
				<table class="table table-striped table-hover table-design">
					<thead>
						<tr>
							<th>Ordered Products</th>
							<th>Quantity</th>
							<th>Order Date</th>
						</tr>
					</thead>
					{{#each rows}}
					<tbody>
						<tr>
							<td>{{this.product_name}}</td>
							<td>{{this.quantity}}</td>
							<td>{{this.purchase_date}}</td>
						</tr>
					</tbody>
					{{/each}}
				</table>
			</div>
		</div>
	</div>
</div>


<div class="container">
	<div class="customers">
		<fieldset class="customer-fields">
			<legend class="customer-legends">
				<img src="/customer-white.png">&ensp;<h3>C U S TO M E R S</h3>
			</legend>
			<div class="container">
				{{#each rows}}
				<div class="customer-contents">
					<img src="/customer.png">
					<div class="customer-details">
						<li><b>Full Name:</b> {{this.last_name}}, {{this.first_name}} {{this.middle_name}}<li>
						<li><b>Email:</b> {{this.email}}</li>
						<li><b>Ordered Product:</b> {{this.products_name}}</li>
						<li><b>Quantity:</b> {{this.quantity}}</li>
						<li><b>Date:</b> {{this.purchase_date}}</li>
						<li><a href="/admin/customers/{{this.id}}">
								<button type="button" class="btn btn-design"><b>See more details&nbsp;&raquo;</b></button>
								</a>
						</li>
					</div>
				</div>
				{{/each}}
			</div>
		</fieldset>
	</div>
</div>