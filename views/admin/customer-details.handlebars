<div class="container">
	<div class="customers">
		<fieldset class="customer-fields">
			<legend class="customer-legends">
				<img src="/customer-white.png">&ensp;<h3>C U S TO M E R S</h3>
			</legend>
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div class="customer-details">
							<fieldset class="customer-details-field">
								<legend class="customer-details-legend">
									<img src="/customer.png">&ensp;<h5>Customer Details</h5>
								</legend>
								<div class="container">
									<div class="table-responsive">
										<table class="table table-striped table-hover table-design">
											<thead>
												<tr>
													<th>First Name</th>
													<th>Middle Name</th>
													<th>Last Name</th>
													<th>Email Address</th>
													<th>State</th>
													<th>City</th>
													<th>Street</th>
													<th>Zipcode</th>
												</tr>
											</thead>
											<tbody>
												<tr>
													<td>{{first_name}}</td>
													<td>{{middle_name}}</td>
													<td>{{last_name}}</td>
													<td>{{email}}</td>
													<td>{{state}}</td>
													<td>{{city}}</td>
													<td>{{street}}</td>
													<td>{{zipcode}}</td>
												</tr>
											</tbody>
										</table>
									</div>
								</div>
							</fieldset>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						<div class="order-details">
							<fieldset class="order-details-field">
								<legend class="order-details-legend">
									<img src="/order.png">&ensp;<h5>Order Details</h5>
								</legend>
								<div class="container">
									<div class="table-responsive">
										<table class="table table-striped table-hover table-design">
											<thead>
												<tr>
													<th>Ordered Products</th>
													<th>Quantity</th>
													<th>Order Date</th>
												</tr>
											</thead>
											{{#each rows}}
											<tbody>
												<tr>
													<td>{{this.product_name}}</td>
													<td>{{this.quantity}}</td>
													<td>{{moment this.purchase_date local=true add='hours' amount='8' format='llll'}}</td>
												</tr>
											</tbody>
											{{/each}}
										</table>
									</div>
								</div>
							</fieldset>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="ml-auto" style="margin: 20px 20px;">
					<a href="/admin/customers"><button type="button" class="btn btn-design-admin"><b>Go back to Customers Page&ensp;&raquo;</b></button></a>
				</div>
			</div>
		</fieldset>
	</div>
</div>