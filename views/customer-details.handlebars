<body class="background">
<div class="container-fluid">
	<div class="row">
		<div class="col-md-3">
	    <div class="sidenav img-icons">
	      <a href="/admin"><h5>DELISHOES ADMIN</h5></a>
	      <hr>
	      <a href="/developers"><img src="/about.png">&ensp;About Developers</a>
	      <a href="/products"><img src="/products.png">&ensp;Products</a>
	      <a href="/categories"><img src="/category.png">&ensp;Categories</a>
	      <a href="/brands"><img src="/brand.png">&ensp;Brands</a>
	      <a href="/orders"><img src="/order.png">&ensp;Orders</a>
	      <a href="/customers"><img src="/customer.png">&ensp;Customers</a>
	    </div>
  	</div>
  	<div class="col-md-9">
  		<div class="row">
				<div class="col-md-12">
					<p>CUSTOMER DETAILS:</p>
					<div class="table-responsive">
						<table class="table table-striped table-hover table-design">
							<thead>
								<tr>
									<th>First Name</th>
									<th>Middle Name</th>
									<th>Last Name</th>
									<th>Email Address</th>
									<th>State</th>
									<th>City</th>
									<th>Street</th>
									<th>Zipcode</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td>{{data.first_name}}</td>
									<td>{{data.middle_name}}</td>
									<td>{{data.last_name}}</td>
									<td>{{data.email}}</td>
									<td>{{data.state}}</td>
									<td>{{data.city}}</td>
									<td>{{data.street}}</td>
									<td>{{data.zipcode}}</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<p>ORDER DETAILS:</p>
					<div class="table-responsive">
						<table class="table table-striped table-hover table-design">
							<thead>
								<tr>
									<th>Ordered Products</th>
									<th>Quantity</th>
									<th>Order Date</th>
								</tr>
							</thead>
							{{#each rows}}
							<tbody>
								<tr>
									<td>{{this.product_name}}</td>
									<td>{{this.quantity}}</td>
									<td>{{this.purchase_date}}</td>
								</tr>
							</tbody>
							{{/each}}
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</body>