<style>
  	@import url('https://fonts.googleapis.com/css?family=Homemade Apple');
	@import url('https://fonts.googleapis.com/css?family=Poppins');

.h1{
	font-size: 125%;
	color: #fff;
	text-shadow: 0px 0px 300px #000;
	margin-bottom: 5%;
	font-family: 'Poppins', sans-serif;
}

</style>

<div class="container">
	<div class="jumbotron mt-2">
		{{#each data}}
		<h1 class="mt-3 text-center">{{this.name}}</h1>
			<div class="col-lg-8 col-md-8 col-sm-8 mb-0 mx-auto">
				<div class="card bg-secondary text-light center">
					<img class="card-img-top" src="{{this.picture}}" alt="{{this.name}}">
					<div class="card-body">
						<!--<h4 class="card-title">Model Name: {{this.name}}</h4>
						--><h4 class="card-title">Brand: {{this.brand}}</h4>
							<h5 class="card-title">â‚± {{this.price}}.00</h5>
						<p class="card-text">
							<h7 class="card-title">{{this.type}}</h7>
						</p>
							<h7 class="card-title">{{this.description}}</h7>
					</div>
				</div>
			</div>
		{{/each}}
	</div>
</div>