<style>
  	@import url('https://fonts.googleapis.com/css?family=Homemade Apple');
	@import url('https://fonts.googleapis.com/css?family=Poppins');

.h1{
	font-size: 125%;
	color: #fff;
	text-shadow: 0px 0px 300px #000;
	margin-bottom: 5%;
	font-family: 'Poppins', sans-serif;
}

.card{

	background: linear-gradient(to right, #c61aff, #f9e6ff);

}

.card-body{
	color: white;
}

.header-design{

	background-color: #8600b3;
	color: white;
	font-style: bold;

}

.body-design{

	background: linear-gradient(#c61aff, #f9e6ff);
}

.btn-design{
	background-color: none;
	border-color: #8600b3;
	color: #c61aff;
}

.btn-design:hover{
	background-color: #8600b3;
	border-color: #c61aff;
	color: white;
}

.lbl-text{
	color:white;
	font-style: bold;
	text-transform: capitalize;
}

</style>

<div class="container">
	<div class="jumbotron mt-2">
		{{#each data}}
		<h1 class="mt-3 text-center">{{this.name}}</h1>
			<div class="col-lg-8 col-md-8 col-sm-8 mb-0 mx-auto">
				<div class="card center">
					<img class="card-img-top" src="{{this.picture}}" alt="{{this.name}}">
					<div class="card-body">
						<h4 class="card-title">{{this.brand}} - {{this.type}}</h4>
						<h5 class="card-title">â‚± {{this.price}}.00</h5>
						<h7 class="card-title">{{this.description}}
						<button type="button" style="float:right" class="btn btn-lg btn-design" data-toggle="modal" data-target="#orderModal">Order Now!</button></h7>
					</div>
				</div>
			</div>
		{{/each}}
	</div>
</div>

<!--Order Modal-->

<div class="modal fade" id="orderModal" tabindex="-1" role="dialog" aria-labelledby="orderModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">

		<div class="modal-content">
			<div class="modal-header header-design">
				<h4 class="modal-title">CONTACT FORM</h4>
				<button type="button" class="close" data-dismiss="modal">&times;
				</button>
			</div>

			<div class="modal-body body-design">
				{{#each data}}
				<form method="POST" action="{{this.id}}/send">
					<div class="controls">
						<div class="form-group">
							<label class="control-label lbl-text" for="name">Name</label>
							<div>
								<input id="name" name="name" type="text" placeholder="Juan Dela Cruz" class="form-control" required="">
							</div>
						</div>
						<div class="form-group">
							<label class="control-label lbl-text" for="phone">Phone</label>
							<div>
								<input id="phone" name="phone" type="number" placeholder="09976897678" class="form-control" required="">
							</div>
						</div>
						<div class="form-group">
							<label class="control-label lbl-text" for="email">Email</label>
							<div>
								<input id="email" name="email" type="email" placeholder="jdelacruz@gmail.com" class="form-control" required="">
							</div>
						</div>
						<div class="form-group">
							<label class="control-label lbl-text" for="productid">Product ID</label>
							<div>
								<input id="productid" name="productid" type="text" value="{{this.id}}" class="form-control" required="" readonly="">
							</div>
						</div>
						<div class="form-group">
							<label class="control-label lbl-text" for="quantity">Quantity</label>
							<div>
								<input id="quantity" name="quantity" type="number" placeholder="10" class="form-control" required="">
							</div>
						</div>
						<div class="form-group">
							<div class="text-center">
								<button type="submit" class="btn btn-lg btn-design" title="Submit contact form">
								Submit
								</button>
				          		<button type="button" class="btn btn-lg btn-design" data-dismiss="modal">Close</button>
							</div>
						</div>
					</div>
				</form>
				{{/each}}
			</div>
